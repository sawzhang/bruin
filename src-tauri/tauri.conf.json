{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-utils/schema.json",
  "productName": "Bruin",
  "version": "0.4.0",
  "identifier": "com.bruin.notes",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Bruin",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Productivity",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "minimumSystemVersion": "11.0",
      "frameworks": [],
      "exceptionDomain": null
    },
    "shortDescription": "AI-native note-taking with knowledge graphs",
    "longDescription": "Bruin is a personal knowledge management app with AI-powered note organization, knowledge graphs, and iCloud sync. Built for thinkers who want their notes to work harder.",
    "copyright": "Copyright 2026 Bruin. All rights reserved."
  }
}
